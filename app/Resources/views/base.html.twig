<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="author" content="Robert Stoll">
        <title>{% block title %}Purchase v. 0.0.1{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <base href="{{ baseUrl }}">
        <script type="text/javascript">
        	function focusOrScrollTo(element) {
        	    function findPos(obj) {
			        var curtop = 0;
			        if (obj.offsetParent) {
			        	do {
			            	curtop += obj.offsetTop;
			           	} while (obj = obj.offsetParent);
			      	}
			        return [curtop];
			  	}
                	
        	    var width = window.innerWidth || document.documentElement.clientWidth || document.body.clientWidth;
	 			if (width > 768) {
	 				element.focus();
	 			} else {
		 			window.scroll(0, findPos(element));
		 		}
        	}
        </script>
    </head>
    <body role="document" ng-app="tutteli.purchase" ng-strict-di>
        {% block body %} {% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>