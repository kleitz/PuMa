{% extends 'base.html.twig' %}

{% block stylesheets %}
	
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{ asset('css/main.css') }}">
{% endblock %}    

{% block body %}
    <!-- Fixed navbar -->
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                {% if app.user and is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                {% endif %}
                <a class="navbar-brand" ui-sref="home" href="{{ path('tutteli_purchase_homepage') }}"> {{ 'nav.purchase'|trans }}</a> 
                <span id="loader"></span>
            </div>
            {% if app.user and is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                <div id="navbar" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        {% if app.user and is_granted('ROLE_ADMIN') %}
                            <li class="dropdown">
                                <a  class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{{ 'nav.settings'|trans }} <span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li><a ui-sref="users" {# href="{{ path('get_users') }}" #}>{{ 'nav.users'|trans }}</a></li>
                                </ul>
                            </li>
                        {% endif %}
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> {{app.user.username}} <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                {# <li role="separator" class="divider"></li>#}
                                <li><a target="_self" href="{{ path('logout') }}" >{{ 'nav.logout'|trans }}</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            {% endif %}
        </div>
    </nav>
    <div class="container" role="main">
    	<div ng-controller="tutteli.alert.AlertCtrl" style="display:none" ng-cloak>
    		<uib-alert ng-repeat="alert in alerts" type="{{'{{alert.type}}'}}" close="close(alert.key)">
    		    <div compile="alert.msg"></div>
    		</uib-alert>
    	</div>
        {% block content %}{% endblock %}
	</div>
{% endblock %}    

{% block javascripts %}
    {% javascripts filter="?jsqueeze" output="js/app.js" 
    	'../bower_components/jquery/dist/jquery.js'
        '../bower_components/bootstrap/dist/js/bootstrap.js' 
    	'../bower_components/angular/angular.js'
    	'../bower_components/angular-resource/angular-resource.js'
    	'../bower_components/angular-cookies/angular-cookies.js'
    	'../bower_components/angular-ui-router/release/angular-ui-router.js'
    	'../bower_components/angular-bootstrap/ui-bootstrap-tpls.js'
    	'../bower_components/tutteli-angular-pre-work/src/pre-work.js'
    	'../bower_components/tutteli-angular-auth/src/auth.js'
        '@TutteliAppBundle/Resources/js/tutteli-loader.js'
    	'@TutteliAppBundle/Resources/js/tutteli-alert.js'
    	'@TutteliAppBundle/Resources/js/tutteli-regainFocus.js'
    	'@TutteliAppBundle/Resources/js/tutteli-utils.js'
    	'@TutteliAppBundle/Resources/js/app.js'
    	'@TutteliAppBundle/Resources/js/controllers.js'
        '@TutteliAppBundle/Resources/js/services.js' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
