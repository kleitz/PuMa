{% set user = entity %}
{% set name = 'user' %}
{% set preWork = 'users/edit.tpl' %}
{%  set formAction = notXhr ? path('put_user', {'userId': user.id}) : '' %}
{%  set formSubmit = 'userCtrl.updateUser($event)' %}
{% set btnText = 'users.update'|trans %}
{% extends 'TutteliAppBundle::form.layout.html.twig' %}

{% block title %} Edit User | {{ parent() }}{% endblock %}

{% block form_content %}
    {%  include 'TutteliAppBundle:User:form.incl.twig' %}
{% endblock %}

{%  block form_notXhr %}
	
    <script type="text/javascript">
    	document.getElementById('user_id').value = '{{ user.id }}';
    	document.getElementById('user_username').value = '{{ user.username }}';
    	document.getElementById('user_email').value = '{{ user.email }}';
    	document.getElementById('user_role').value = '{{ user.role }}';
    </script>
{% endblock %}